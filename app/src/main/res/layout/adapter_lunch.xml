<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:id="@+id/cs_layout"
    android:background="@drawable/selector_setting_graident"
    >


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/fm_dp_120"
        android:layout_height="@dimen/fm_dp_120"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="spread" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sbgl_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="小米App"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView1"
        app:layout_constraintRight_toRightOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="@+id/imageView1" />


    <ImageView
        android:id="@+id/iv_one"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/data_empty_img"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView1"
        app:layout_constraintRight_toRightOf="@+id/imageView1"
        app:layout_constraintTop_toBottomOf="@+id/sbgl_one" />
</androidx.constraintlayout.widget.ConstraintLayout>