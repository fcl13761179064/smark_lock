<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main_show">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/fm_dp_120"
        android:layout_height="@dimen/fm_dp_120"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:background="@drawable/selector_setting_graident"
        android:alpha="0.3"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="spread" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sbgl_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="网络设置"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView1"
        app:layout_constraintRight_toRightOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="@+id/imageView1" />


    <ImageView
        android:id="@+id/iv_one"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/icon_network_error"
        app:layout_constraintBottom_toBottomOf="@+id/imageView1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView1"
        app:layout_constraintRight_toRightOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="@+id/imageView1" />



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/fm_dp_120"
        android:layout_height="@dimen/fm_dp_120"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/fm_dp_20"
        app:layout_constraintHorizontal_weight="1"
        android:alpha="0.3"
        android:background="@drawable/selector_setting_graident"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="@+id/imageView1"
        app:layout_constraintWidth_default="spread" />

    <ImageView
        android:id="@+id/iv_two"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/kg_ic_console_replay"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sbgl_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="存储空间"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/fm_dp_120"
        android:layout_height="@dimen/fm_dp_120"
        android:layout_marginLeft="@dimen/fm_dp_20"
        android:alpha="0.3"
        android:background="@drawable/selector_setting_graident"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintWidth_default="spread" />

    <ImageView
        android:id="@+id/iv_three"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/kg_ic_console_order"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sbgl_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="系统版本"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/fm_dp_120"
        android:layout_height="@dimen/fm_dp_120"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        android:layout_marginRight="@dimen/fm_dp_15"
        android:layout_marginLeft="@dimen/fm_dp_20"
        android:background="@drawable/selector_setting_graident"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintWidth_default="spread" />

    <ImageView
        android:id="@+id/iv_four"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/icon_control_recover"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sbgl_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="6dp"
        android:text="恢复出厂"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />



    <View
        android:id="@+id/sound_img"
        android:layout_width="@dimen/fm_dp_120"
        android:layout_height="@dimen/fm_dp_120"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="@mipmap/bg_receive_award_item"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        app:layout_constraintEnd_toEndOf="@+id/imageView1"
        app:layout_constraintStart_toStartOf="@+id/imageView1"
        android:gravity="center"
        />

    <View
        android:id="@+id/view"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/sound_img"
        app:layout_constraintStart_toStartOf="@+id/sound_img"
        app:layout_constraintEnd_toEndOf="@+id/sound_img"
        app:layout_constraintBottom_toBottomOf="@+id/voice_pluse"
         />


    <ImageView
        android:id="@+id/at_minus_volue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:background="@mipmap/fm_play_sound_minus"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fm_dp_15"
        android:text="音量-"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/at_minus_volue"
        app:layout_constraintStart_toStartOf="@id/at_minus_volue"
        app:layout_constraintTop_toBottomOf="@id/at_minus_volue"
        />

    <ImageView
        android:id="@+id/at_plus_volue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_dialog_sound_plus_selected"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        android:layout_marginRight="@dimen/fm_dp_25"
        app:layout_constraintBottom_toBottomOf="@+id/view"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/voice_pluse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fm_dp_15"
        android:text="音量+"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/at_plus_volue"
        app:layout_constraintStart_toStartOf="@id/at_plus_volue"
        app:layout_constraintTop_toBottomOf="@id/at_plus_volue" />


    <ImageView
        android:id="@+id/time"
        android:layout_width="@dimen/fm_dp_120"
        android:layout_height="@dimen/fm_dp_120"
        android:scaleType="centerCrop"
        android:alpha="0.6"
        android:src="@mipmap/ic_compose_finish"
        android:background="@drawable/selector_setting_graident"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/sound_img"
        app:layout_constraintBottom_toBottomOf="@+id/sound_img" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/screen_time"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_one_key_run"
        app:layout_constraintLeft_toLeftOf="@+id/time"
        app:layout_constraintRight_toRightOf="@+id/time"
        app:layout_constraintTop_toTopOf="@+id/time"
        app:layout_constraintBottom_toBottomOf="@+id/time"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="熄屏调整"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/screen_time"
        app:layout_constraintRight_toRightOf="@+id/screen_time"
        app:layout_constraintBottom_toTopOf="@+id/screen_time"/>



    <ImageView
        android:id="@+id/image_mima"
        android:layout_width="@dimen/fm_dp_120"
        android:layout_height="@dimen/fm_dp_120"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:src="@mipmap/ic_compose_finish"
        android:background="@mipmap/z_bg_home_control"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/time"
        app:layout_constraintBottom_toBottomOf="@+id/time" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ai_mima"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_car_challenge_close"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/image_mima"
        app:layout_constraintBottom_toBottomOf="@+id/image_mima"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/at_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开发者模式"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/image_mima"
        app:layout_constraintRight_toRightOf="@+id/image_mima"
        app:layout_constraintBottom_toTopOf="@+id/ai_mima"/>
</androidx.constraintlayout.widget.ConstraintLayout>