<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main_show"
    >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/fm_dp_10"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/fm_dp_15"
        android:layout_marginTop="30sp"
        android:src="@mipmap/top_img_back_white"/>


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/fm_dp_160"
        android:layout_height="@dimen/fm_dp_160"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:background="@drawable/selector_setting_graident"
        android:alpha="0.3"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="spread" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sbgl_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="小米App"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView1"
        app:layout_constraintRight_toRightOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="@+id/imageView1" />


    <ImageView
        android:id="@+id/iv_one"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/data_empty_img"
        app:layout_constraintBottom_toBottomOf="@+id/imageView1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView1"
        app:layout_constraintRight_toRightOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="@+id/imageView1" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/fm_dp_160"
        android:layout_height="@dimen/fm_dp_160"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20sp"
        android:scaleType="centerCrop"
        android:background="@drawable/selector_setting_graident"
        android:alpha="0.3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="spread" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sbgl_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="涂鸦App"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />


    <ImageView
        android:id="@+id/iv_two"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/data_empty_img"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>