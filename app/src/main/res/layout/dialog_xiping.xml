<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/app_shape_white_15_radius"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/at_title"
        android:textSize="25sp"
        android:text="熄屏时间"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/wheel_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/at_title1"
        android:textSize="20sp"
        android:text="5分钟"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/app_shape_ffd0b8bd_10_radius"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/wheel_view"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/at_title2"
        android:textSize="20sp"
        android:gravity="center"
        android:text="10分钟"
        android:padding="5dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/app_shape_ffd0b8bd_10_radius"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/wheel_view"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/at_title3"
        android:textSize="20sp"
        android:gravity="center"
        android:text="15分钟"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textColor="@color/black"
        android:background="@drawable/app_shape_ffd0b8bd_10_radius"
        app:layout_constraintBottom_toTopOf="@+id/wheel_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/at_title4"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:text="永久"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/app_shape_ffd0b8bd_10_radius"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/wheel_view"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
